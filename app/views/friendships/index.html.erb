<div class='friend-container d-flex flex-column mt-5 mb-5 p-2'>
<h5 class='text-center font-weight-bold mb-5 mt-5'>All friends</h5>
<% @friends.each do |friend| %>
  <div class='d-flex align-items-end justify-content-between mb-3 bg-light'>
    <div>
      <%= gravatar_for friend %> <%=link_to "#{friend.first_name} #{friend.surname}", user_path(friend) %>
    </div>
    <div>
      <%= button_to 'Unfriend', user_friendship_path(current_user, friend), method: :delete %>
    </div>
  </div>
<% end %>
</div>