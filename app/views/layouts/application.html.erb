<!DOCTYPE html>
<html>
  <head>
    <title>FacebookProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Talebook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%if current_user %>
            <li class="nav-item active"><%= link_to posts_path, class: "nav-link" do %>
            Home
            <span class="sr-only">(current)</span>
            <% end %></li>

            <li class="nav-item"><%= link_to 'My profile', user_path(current_user), class: "nav-link" %></li>

            <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>

            <li class="nav-item"><%= link_to "Friend Request(s) #{incoming_requests.count}", friend_requests_path(current_user), class: "nav-link" %></li>

            <li class="nav-item"><%= link_to 'Friends', user_friendships_path(current_user), class: "nav-link" %></li>

            <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete,  class: "nav-link" %></li>

          <% else %>
            <li class="nav-item"><%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %></li>

            <li class="nav-item"><%= link_to 'Sign in', new_user_session_path, class: "nav-link" %></li>

            <li class="nav-item"><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>



    <% flash.each do |key, value| %>
       <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %> 
    <%= yield %>
  </body>
</html>
