<h3>Timeline</h3>

<%= form_for(@post) do |f| %>
  <%= f.label :body, 'Create a post' %><br/>
  <%= f.text_area :body %>
  <%= f.submit 'Post' %>
<% end %>
<% if @posts.empty? %>
  <h4>You don't have any posts yet!</h4>
<% else  %>
  <div>
    <% @posts.each do |post| %>
      <%= post.body %><br>
      <small><%= link_to "#{post.user.first_name}", user_path(post.user) %></small>
      <% if current_user == post.user %>
        <small><%= link_to 'Edit', edit_post_path(post) %></small>
        <small><%= link_to 'Delete', post_path(post), method: :delete %></small><br><br>
      <% end %>
    <% end %>
  </div>
<% end %>