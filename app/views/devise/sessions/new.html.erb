<div class = "container form-container mt-5 mb-5 mx-auto ">
  <h5 class="font-weight-bold text-center py-3 mb-3">Login</h5>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field bg-light mb-3">
      <%= f.label :email, class: "px-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-1"  %>
    </div>

    <div class="field bg-light mb-3">
      <%= f.label :password, class: "px-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-1" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field bg-light mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "ml-1" %>
      </div>
    <% end %>

    <div class="actions mt-3 mb-3">
      <%= f.submit "Log in", class: "submit btn btn-primary"%>
    </div>
  <% end %>
  <div class="text-center">
      <%= render "devise/shared/links" %>
  </div>
</div>
  